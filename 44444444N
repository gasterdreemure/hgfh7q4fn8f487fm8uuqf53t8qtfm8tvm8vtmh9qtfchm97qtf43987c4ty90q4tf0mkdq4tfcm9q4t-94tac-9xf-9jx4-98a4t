-- Gui to Lua
-- Version: 3.2

-- Instances:

local GyroUp = Instance.new("ScreenGui")
local GU = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Up = Instance.new("Frame")
local UPER = Instance.new("TextButton")
local Remover = Instance.new("TextButton")

--Properties:

GyroUp.Name = "GyroUp"
GyroUp.Parent = game.CoreGui.BlockHub
GyroUp.ResetOnSpawn = false

GU.Name = "GU"
GU.Parent = GyroUp
GU.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
GU.BackgroundTransparency = 1.000
GU.Position = UDim2.new(0.549120843, 0, 5.80691619e-08, 0)
GU.Size = UDim2.new(0, 152, 0, 100)

Title.Name = "Title"
Title.Parent = GU
Title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Title.Position = UDim2.new(-0.280000091, 0, 0.129439816, 0)
Title.Size = UDim2.new(0, 127, 0, 22)
Title.Font = Enum.Font.SourceSans
Title.Text = "GyroMode"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 14.000
Title.Draggable = true
Title.Active = true
Title.Selectable = true

Up.Name = "Up"
Up.Parent = Title
Up.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Up.Position = UDim2.new(-0.00103074312, 0, 0.984990418, 0)
Up.Size = UDim2.new(0, 127, 0, 49)

UPER.Name = "UPER"
UPER.Parent = Up
UPER.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
UPER.Position = UDim2.new(0.0236220472, 0, 0.112208635, 0)
UPER.Size = UDim2.new(0, 121, 0, 19)
UPER.Font = Enum.Font.SourceSans
UPER.Text = "Get Up!"
UPER.TextColor3 = Color3.fromRGB(255, 255, 255)
UPER.TextSize = 14.000
UPER.MouseButton1Click:Connect(function()

for _, instance in pairs(game:GetDescendants()) do
	if instance:IsA("BodyGyro") then
		instance:Destroy()
	end
end

wait "0.5"


spawn(function()
while true do
game.Players.LocalPlayer.MaximumSimulationRadius = math.pow(math.huge,math.huge)*math.huge
game.Players.LocalPlayer.SimulationRadius = math.pow(math.huge,math.huge)*math.huge
game:GetService("RunService").Stepped:wait()
end
end)
local function zeroGrav(part)
   if part:FindFirstChild("BodyGyro") then return end
   local temp = Instance.new("BodyGyro")
   temp.Parent = part
end

for i,v in ipairs(workspace:GetDescendants()) do
   if v:IsA("Part") and v.Anchored == false then
       if not (v:IsDescendantOf(game.Players.LocalPlayer.Character)) then
           zeroGrav(v)
       end
   end
end

workspace.DescendantAdded:Connect(function(part)
   if part:IsA("Part") and part.Anchored == false then
       if not (part:IsDescendantOf(game.Players.LocalPlayer.Character)) then
           zeroGrav(part)
       end
   end
end)

workspace.DescendantAdded:Connect(function(TrussPart)
   if TrussPart:IsA("TrussPart") and part.Anchored == false then
       if not (part:IsDescendantOf(game.Players.LocalPlayer.Character)) then
           zeroGrav(TrussPart)
       end
   end
end)

workspace.DescendantAdded:Connect(function(VehicleSeat)
   if VehicleSeat:IsA("VehicleSeat") and part.Anchored == false then
       if not (part:IsDescendantOf(game.Players.LocalPlayer.Character)) then
           zeroGrav(VehicleSeat)
       end
   end
end)

wait "0.01"

for _, instance in pairs(game:GetDescendants()) do
	if instance:IsA("BodyGyro") then
	    instance.D = "500"
		instance.P = "3000"
		instance.MaxTorque = Vector3.new(400000, 0, 400000)
	end
end

wait"0.01"
print "Geting Up!"

end)

Remover.Name = "Remover"
Remover.Parent = Up
Remover.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Remover.Position = UDim2.new(0.0236220472, 0, 0.569256544, 0)
Remover.Size = UDim2.new(0, 121, 0, 19)
Remover.Font = Enum.Font.SourceSans
Remover.Text = "Get Down!(buggy)"
Remover.TextColor3 = Color3.fromRGB(255, 255, 255)
Remover.TextSize = 14.000
Remover.MouseButton1Click:Connect(function()

for _, instance in pairs(game:GetDescendants()) do
	if instance:IsA("BodyGyro") then
		instance:Destroy()
	end
end
wait "0.5"
for _, instance in pairs(workspace:GetDescendants()) do
	if instance:IsA("BodyGyro") then
		instance:Destroy()
	end
end
wait "0.5"
for _, instance in pairs(game.Players:GetDescendants()) do
	if instance:IsA("BodyGyro") then
		instance:Destroy()
	end
end
wait "0.5"
for _, instance in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
	if instance:IsA("BodyGyro") then
		instance:Destroy()
	end
end

print "Removed!"

end)
